			"item": [
				{
					"name": "Registrar Usuario",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"// Código para el test script de Postman tras hacer login",
									"",
									"try {",
									"    if (pm.response.code === 200 || pm.response.code === 201) {",
									"        const responseData = pm.response.json();",
									"",
									"        // Cambia 'token' si tu respuesta usa otro nombre para el token",
									"        const tokenFieldName = \"token\";",
									"",
									"        if (responseData && responseData[tokenFieldName]) {",
									"            const token = responseData[tokenFieldName];",
									"            ",
									"            // Guarda el token en variable de entorno",
									"            pm.environment.set(\"auth_token\", \"Bearer \" + token);",
									"",
									"            // Opcional: guardar también en variable global si lo prefieres",
									"            pm.globals.set(\"auth_token\", \"Bearer\" + token);",
									"",
									"            console.log(`Token guardado en variable de entorno: ${token}`);",
									"        } else {",
									"            console.error(`No se encontró el campo '${tokenFieldName}' en la respuesta.`);",
									"        }",
									"    } else {",
									"        console.error(`Respuesta no exitosa. Código: ${pm.response.code}`);",
									"    }",
									"} catch (error) {",
									"    console.error(\"Error al procesar la respuesta para guardar el token:\", error);",
									"}",
									""
								],
								"type": "text/javascript",
								"packages": {}
							}
